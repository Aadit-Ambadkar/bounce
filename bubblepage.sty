\ProvidesPackage{bubblepage}

\RequirePackage{kvoptions}

\DeclareStringOption[]{model} % color model
\DeclareStringOption[]{color} % color code

\ProcessKeyvalOptions*

\RequirePackage{tikz}
\usetikzlibrary{calc}

\RequirePackage{xcolor}

\definecolor{bubblecolor}{\bubblepage@model}{\bubblepage@color}

\newcommand\bubblepage{
    \begin{tikzpicture}[remember picture, overlay]

        % Circles in each group are created in descending value of y coordinate.

        % left side
        
        \draw[bubblecolor!70, line width=2.9] ($(current page.north west)+(3.6, -1.9)$) circle (1.2);
        \draw[bubblecolor!75, line width=3] ($(current page.north west)+(0.4, -4.7)$) circle (1.5);
        \draw[bubblecolor!80, line width=2.5] ($(current page.north west)+(1.6, -8.5)$) circle (1);
        %\draw

        % right side

        \draw[bubblecolor!70, line width=4] ($(current page.north east)+(-4.7, -1.2)$) circle (2);
        \draw[bubblecolor!80, line width=3.3] ($(current page.north east)+(-1.5,-4.7)$) circle (1.4);
        \draw[bubblecolor!75, line width=2.5] ($(current page.north east)+(-2.8,-7.5)$) circle (0.7);
        \draw[bubblecolor!85, line width=3.2] ($(current page.north east)+(-0.4,-10)$) circle (1.2);
    \end{tikzpicture}
}

\let\oldmaketitle\maketitle
\def\maketitle{
	\oldmaketitle\bubblepage\thispagestyle{empty}
}
